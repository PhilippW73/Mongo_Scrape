<div class="container-fluid">
  <div class="jumbotron text-center">
    <h1 class="top-title">New York Times Sports Scraper</h1>
    <p><button class="w3-button w3-red" style="background-color: red">Scrape</button></p>
  </div>
</div>



{{#if articles}}
	<div class="container-fluid">
	  <div class="row">
	    <div class="col-md-12">
	      {{#each articles}}
	        <div class="panel panel-primary">
	          <div class="panel-heading">
	            <div class="row">
	              <div class="col-md-12">
	                <h3><a style="color:white" href="{{this.link}}" class="headline">{{this.headline}}</a></h3>
	              </div>
	              <div class="col-md-2">
	                <button class="btn btn-warning comment-button" data-id="{{this._id}}">Comment</button>
	                <button class="btn btn-success save-button" data-id="{{this._id}}">Save Article</button>
	              </div>
	            </div>
	          </div>
	          <div class="panel-body">
	            {{#if this.summary}}
	              <p>{{this.summary}}</p>
	            {{/if}}
	            {{#unless this.summary}}
	              <p>No Summary Avaliable</p>
	            {{/unless}}
	          </div>
	        </div>
	      {{/each}}
	    </div>
	  </div>
	</div>

{{/if}}